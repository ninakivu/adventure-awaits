<h1> New Invitation To <%= @trip.title %>: </h1>
<%= form_for [@trip, @invite], :html => {class: 'new_invite form-horizontal'} do |f| %>
  <fieldset>
    <div class="form-group">
      <label for="exampleSelect1">Add User</label>
      <%= f.select(:recipient_id, User.all.collect {|u| [ u.name, u.id ] }) %>
    </div>
    <div class="form-group" "custom-control custom-radio">
      <%= f.submit 'Invite', class: "btn btn-info" %>
    </div>
  </fieldset>
<% end %>